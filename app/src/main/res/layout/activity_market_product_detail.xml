<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MarketProductDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_market_product_detail"
                android:layout_width="match_parent"
                android:layout_height="290dp"
                android:contentDescription="@string/img_market_product_detail"
                android:scaleType="centerCrop"
                android:src="@color/off_white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ImageContrastCheck" />

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/app_bar_layout_market_product_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/template_gradient_app_bar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/material_tool_bar_market_product_detail"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:paddingEnd="0dp"
                    android:paddingStart="5dp"
                    app:title="@string/title_product_detail"
                    app:titleTextColor="@color/off_white" />

            </com.google.android.material.appbar.AppBarLayout>

            <ImageView
                android:id="@+id/img_bottom_sheet_product_detail"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="200dp"
                android:contentDescription="@string/img_bottom_sheet_market_product_detail"
                android:src="@drawable/template_bottom_sheet"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/app_bar_layout_market_product_detail" />

            <ImageView
                android:id="@+id/img_grade_sheet_market_product_detail"
                android:layout_width="130dp"
                android:layout_height="67.5dp"
                android:contentDescription="@string/img_grade_sheet_market_product_detail"
                android:src="@drawable/template_grade_sheet"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/img_bottom_sheet_product_detail" />

            <TextView
                android:id="@+id/tv_title_market_product_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/default_title"
                android:textColor="@color/gray_dark"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@id/img_grade_sheet_market_product_detail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/img_bottom_sheet_product_detail"
                tools:text="@string/tv_title_market_product_detail" />

            <TextView
                android:id="@+id/tv_grade_market_product_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/default_grade"
                android:textColor="@color/off_white"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@id/img_grade_sheet_market_product_detail"
                app:layout_constraintEnd_toEndOf="@id/img_grade_sheet_market_product_detail"
                app:layout_constraintStart_toStartOf="@id/img_grade_sheet_market_product_detail"
                app:layout_constraintTop_toTopOf="@id/img_grade_sheet_market_product_detail"
                tools:text="@string/tv_grade_market_product_detail" />

            <TextView
                android:id="@+id/tv_price_market_product_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/default_price"
                android:textColor="@color/gray_dark"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@id/tv_title_market_product_detail"
                app:layout_constraintTop_toBottomOf="@id/tv_title_market_product_detail"
                tools:text="@string/tv_price_market_product_detail" />

            <TextView
                android:id="@+id/tv_quantity_market_product_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/default_quantity"
                android:textColor="@color/gray_dark"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/tv_price_market_product_detail"
                app:layout_constraintTop_toBottomOf="@id/tv_price_market_product_detail"
                tools:text="@string/tv_quantity_market_product_detail" />

            <ImageView
                android:id="@+id/img_content_divider_description_market_product_detail"
                android:layout_width="match_parent"
                android:layout_height="7.5dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="25dp"
                android:contentDescription="@string/img_content_divider_description_market_product_detail"
                android:src="@drawable/template_content_divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_quantity_market_product_detail"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:id="@+id/tv_hint_description_market_product_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/tv_hint_description_market_product_detail"
                android:textColor="@color/gray_dark"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@id/tv_quantity_market_product_detail"
                app:layout_constraintTop_toBottomOf="@id/img_content_divider_description_market_product_detail" />

            <TextView
                android:id="@+id/tv_value_description_market_product_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="25dp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/default_description"
                android:textColor="@color/gray_dark"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_hint_description_market_product_detail"
                app:layout_constraintTop_toBottomOf="@id/tv_hint_description_market_product_detail"
                tools:ignore="VisualLintLongText"
                tools:text="@string/tv_value_description_market_product_detail" />

            <ImageView
                android:id="@+id/img_content_divider_seller_market_product_detail"
                android:layout_width="match_parent"
                android:layout_height="7.5dp"
                android:layout_marginBottom="100dp"
                android:layout_marginTop="25dp"
                android:contentDescription="@string/img_content_divider_seller_market_product_detail"
                android:src="@drawable/template_content_divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_value_description_market_product_detail"
                tools:ignore="ImageContrastCheck" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_seller_market_product_detail"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="17.5dp"
                android:src="@color/off_white"
                app:civ_border_color="@color/blue_500"
                app:civ_border_width="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_content_divider_seller_market_product_detail"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:id="@+id/tv_name_seller_market_product_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/default_name"
                android:textColor="@color/gray_dark"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@id/tv_location_seller_market_product_detail"
                app:layout_constraintStart_toEndOf="@id/img_seller_market_product_detail"
                app:layout_constraintTop_toTopOf="@id/img_seller_market_product_detail"
                tools:text="@string/tv_name_seller_market_product_detail" />

            <ImageView
                android:id="@+id/img_location_seller_market_product_detail"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@string/img_location_seller_market_product_detail"
                android:src="@drawable/icon_location_black"
                app:layout_constraintBottom_toBottomOf="@id/tv_location_seller_market_product_detail"
                app:layout_constraintStart_toStartOf="@id/tv_name_seller_market_product_detail"
                app:layout_constraintTop_toTopOf="@id/tv_location_seller_market_product_detail" />

            <TextView
                android:id="@+id/tv_location_seller_market_product_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="25dp"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/default_location"
                android:textColor="@color/gray_dark"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@id/img_seller_market_product_detail"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/img_location_seller_market_product_detail"
                app:layout_constraintTop_toBottomOf="@id/tv_name_seller_market_product_detail"
                tools:ignore="TextContrastCheck"
                tools:text="@string/tv_location_seller_market_product_detail" />

            <ImageView
                android:id="@+id/img_bottom_navigation_space"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="105dp"
                android:contentDescription="@string/img_bottom_navigation_space"
                android:src="@drawable/template_content_divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_seller_market_product_detail"
                tools:ignore="ImageContrastCheck" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/img_content_divider_market_product_Detail"
        android:layout_width="match_parent"
        android:layout_height="2.5dp"
        android:layout_marginBottom="15dp"
        android:contentDescription="@string/img_content_divider_market_product_detail"
        android:src="@drawable/template_content_divider"
        app:layout_constraintBottom_toTopOf="@id/btn_buy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ImageContrastCheck" />

    <ImageView
        android:id="@+id/img_background_button_market_product_detail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:contentDescription="@string/img_background_button_market_product_detail"
        android:src="@drawable/template_background_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_content_divider_market_product_Detail" />

    <ImageView
        android:id="@+id/img_favorite_container_market_product_detail"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="25dp"
        android:contentDescription="@string/img_favorite_container_market_product_detail"
        app:layout_constraintBottom_toBottomOf="@id/btn_buy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_buy"
        android:src="@drawable/template_favorite_container" />

    <ImageView
        android:id="@+id/img_favorite_market_product_detail"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:contentDescription="@string/img_favorite_market_product_detail"
        android:src="@drawable/icon_favorite_inactive"
        app:layout_constraintBottom_toBottomOf="@id/img_favorite_container_market_product_detail"
        app:layout_constraintEnd_toEndOf="@id/img_favorite_container_market_product_detail"
        app:layout_constraintStart_toStartOf="@id/img_favorite_container_market_product_detail"
        app:layout_constraintTop_toTopOf="@id/img_favorite_container_market_product_detail" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_buy"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginBottom="15dp"
        android:contentDescription="@string/btn_buy_content_description"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/btn_buy"
        android:textColor="@color/off_white"
        android:textSize="16sp"
        app:backgroundTint="@color/blue_500"
        app:cornerRadius="10dp"
        app:rippleColor="@color/ripple_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_favorite_container_market_product_detail"
        tools:ignore="TextContrastCheck,VisualLintButtonSize" />

</androidx.constraintlayout.widget.ConstraintLayout>
