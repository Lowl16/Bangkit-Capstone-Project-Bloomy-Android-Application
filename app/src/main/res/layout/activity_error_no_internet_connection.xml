<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_50_extra_light"
    tools:context=".ui.activity.ErrorNoInternetConnectionActivity">

    <ImageView
        android:id="@+id/img_background_error_no_internet_connection"
        android:layout_width="0dp"
        android:layout_height="275dp"
        android:contentDescription="@string/img_background_home"
        android:src="@drawable/background_error_no_internet_connection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ImageContrastCheck" />

    <ImageView
        android:id="@+id/img_error_no_internet_connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/img_error_no_internet_connection"
        android:src="@drawable/icon_error_no_internet_connection"
        app:layout_constraintBottom_toTopOf="@id/tv_title_error_no_internet_connection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_background_error_no_internet_connection" />

    <TextView
        android:id="@+id/tv_title_error_no_internet_connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/tv_title_error_no_internet_connection"
        android:textColor="@color/blue_500"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_error_no_internet_connection" />

    <TextView
        android:id="@+id/tv_subtitle_error_no_internet_connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/tv_subtitle_error_no_internet_connection"
        android:textColor="@color/blue_500"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_error_no_internet_connection" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_try_again_error_no_internet_connection"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/btn_try_again"
        android:textColor="@color/off_white"
        android:textSize="16sp"
        app:backgroundTint="@color/blue_500"
        app:cornerRadius="10dp"
        app:rippleColor="@color/ripple_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_subtitle_error_no_internet_connection" />

</androidx.constraintlayout.widget.ConstraintLayout>