<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="25dp"
    android:layout_gravity="center_horizontal"
    app:cardBackgroundColor="@color/off_white"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_choose_image_picker_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/tv_choose_image_picker_dialog"
            android:textColor="@color/blue_500"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_camera_image_picker_dialog"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/img_camera_image_picker_dialog"
            android:src="@drawable/icon_camera"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_choose_image_picker_dialog" />

        <ImageView
            android:id="@+id/img_gallery_image_picker_dialog"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="70dp"
            android:contentDescription="@string/img_gallery_image_picker_dialog"
            android:src="@drawable/icon_gallery"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/img_camera_image_picker_dialog" />

        <TextView
            android:id="@+id/tv_camera_image_picker_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/tv_camera_image_picker_dialog"
            android:textColor="@color/gray_dark"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@id/img_camera_image_picker_dialog"
            app:layout_constraintStart_toStartOf="@id/img_camera_image_picker_dialog"
            app:layout_constraintTop_toBottomOf="@id/img_camera_image_picker_dialog" />

        <TextView
            android:id="@+id/tv_gallery_image_picker_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/tv_gallery_image_picker_dialog"
            android:textColor="@color/gray_dark"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@id/img_gallery_image_picker_dialog"
            app:layout_constraintStart_toStartOf="@id/img_gallery_image_picker_dialog"
            app:layout_constraintTop_toBottomOf="@id/img_gallery_image_picker_dialog" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel_image_picker_dialog"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/btn_cancel_image_picker_dialog_content_description"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/btn_cancel_image_picker_dialog"
            android:textColor="@color/blue_500"
            android:textSize="16sp"
            app:cornerRadius="8dp"
            app:backgroundTint="@android:color/transparent"
            app:rippleColor="@color/ripple_white"
            app:strokeColor="@color/blue_500"
            app:strokeWidth="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_camera_image_picker_dialog"
            tools:ignore="TextContrastCheck,VisualLintButtonSize" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>